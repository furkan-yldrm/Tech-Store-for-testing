@model PasswordDto
@{
}

<div class="mx-auto rounded border p-4" style="width: 500px">
	<h2 class="text-center mb-3">Şifreyi Değiştir</h2>
	<hr />

	@if (ViewBag.ErrorMessage != null)
	{
		<div class='alert alert-danger alert-dismissible fade show' role='alert'>
			<strong>@ViewBag.ErrorMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
		</div>
	}
	else if (ViewBag.SuccessMessage != null)
	{
		<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@ViewBag.SuccessMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
		</div>
	}

	<form method="post">
		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Mevcut Şifre</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="CurrentPassword" id="MevcutPass">
				<span asp-validation-for="CurrentPassword" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Yeni Şifre</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="NewPassword" id="YeniPass">
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Şifreyi Onayla</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="ConfirmPassword" id="OnaylaPass">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>

		<div class="row">
			<div class="offset-sm-4 col d-grid">
				<button type="submit" class="btn btn-primary" id="OnaylaPass">Onayla</button>
			</div>
			<div class="col d-grid">
				<a class="btn btn-outline-primary" asp-controller="Account" asp-action="Profile" id="IptalPass">Cancel</a>
			</div>
		</div>
	</form>
</div>
